# Configurações NPM para resolver problemas do Rollup
engine-strict=true
save-exact=true
prefer-offline=true
no-audit=true
fund=false

# Configurações específicas para Rollup
platform=linux
arch=x64
target-platform=linux
target-arch=x64

# Configurações de cache
cache=.npm
prefer-dedupe=true

# Configurações para melhorar build performance
maxsockets=50
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configurações para resolver problemas de dependências opcionais
optional=true
omit=dev 