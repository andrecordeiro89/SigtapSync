# Configurações NPM para desenvolvimento local e deploy
engine-strict=false
save-exact=false
prefer-offline=false
fund=false
audit=false

# Configurações de cache
cache=.npm
prefer-dedupe=true

# Configurações para melhorar build performance
maxsockets=50
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configurações para dependências opcionais (permite falhar sem erro)
optional=true
include-optional=true

# Configurações específicas para Rollup
legacy-peer-deps=true 