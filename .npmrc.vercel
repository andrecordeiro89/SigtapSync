# Configurações NPM específicas para deploy no Vercel (Linux)
engine-strict=true
save-exact=false
prefer-offline=true
fund=false

# Configurações específicas para Rollup no Linux
platform=linux
arch=x64
target-platform=linux
target-arch=x64

# Configurações de cache
cache=.npm
prefer-dedupe=true

# Configurações para melhorar build performance
maxsockets=50
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configurações para dependências opcionais
optional=true 